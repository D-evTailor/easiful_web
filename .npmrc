# ========================================
# pnpm Configuration - Production Ready
# ========================================

# Deshabilitar scripts por defecto (seguridad)
enable-pre-post-scripts=false

# No hacer hoist agresivo (mejor aislamiento de dependencias)
shamefully-hoist=false

# Aprobar SOLO sharp para optimización de imágenes de Next.js
# Sharp necesita compilar bindings nativos para procesamiento de imágenes
sharp:install=true

# Configuración de instalación
auto-install-peers=true
strict-peer-dependencies=false

# Optimización de node_modules
node-linker=isolated

# Lockfile settings
lockfile=true
prefer-frozen-lockfile=true
